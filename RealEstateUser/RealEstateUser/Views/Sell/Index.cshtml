@model RealEstateUser.Models.PropertyDto

@{
    ViewData["Title"] = "List a Property";
}

<style>
    .sell-container {
        max-width: 800px;
        margin: 50px auto;
        animation: fadeInUp 0.6s ease-out;
    }
    
    .custom-card {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
    }

    .card-header-gradient {
        background: linear-gradient(135deg, #1e3a5f, #294b74);
        color: white;
        padding: 30px;
        text-align: center;
        border-bottom-left-radius: 30px;
        border-bottom-right-radius: 30px;
        margin-bottom: 20px;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 12px 15px;
        border: 1px solid #e0e0e0;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

    .form-control:focus, .form-select:focus {
        border-color: #1e3a5f;
        box-shadow: 0 0 15px rgba(30, 58, 95, 0.1);
        background: white;
    }

    .form-label {
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 8px;
    }

    .btn-gradient {
        background: linear-gradient(135deg, #f39c12, #e67e22);
        color: white;
        border: none;
        padding: 15px;
        border-radius: 10px;
        font-weight: bold;
        font-size: 1.1rem;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-gradient:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(243, 156, 18, 0.3);
        color: white;
    }

    .image-preview-container {
        background: #f8f9fa;
        border: 2px dashed #cbd5e0;
        border-radius: 15px;
        padding: 20px;
        text-align: center;
        margin-top: 15px;
        min-height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
    }
    
    .image-preview-container:hover {
        border-color: #f39c12;
    }

    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="container sell-container">
    <div class="custom-card">
        <div class="card-header-gradient">
            <h2 class="fw-bold mb-0"><i class="fa-solid fa-house-medical me-2"></i>List Your Property</h2>
            <p class="text-white-50 mt-2 mb-0">Fill in the details to list your property for sale or rent.</p>
        </div>

        <div class="card-body p-5 pt-2">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger rounded-3 border-0 shadow-sm"><i class="fa-solid fa-triangle-exclamation me-2"></i>@ViewBag.ErrorMessage</div>
            }

            <form asp-action="Index" method="post" enctype="multipart/form-data" asp-controller="Sell">
                <input asp-for="Status" type="hidden" value="Pending" />

                <div class="row g-4 mb-4">
                    <div class="col-md-8">
                        <label asp-for="Title" class="form-label">Property Title <span class="text-danger">*</span></label>
                        <input asp-for="Title" class="form-control" placeholder="e.g. Luxury Villa with Pool" required />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-4">
                        <label asp-for="Type" class="form-label">Listing Type <span class="text-danger">*</span></label>
                        <select asp-for="Type" class="form-select" required>
                            <option value="Sell">For Sale</option>
                            <option value="Rent">For Rent</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Detail the amazing features of this property..." required></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Price ($) <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text border-0" style="background: #e2e8f0;"><i class="fa-solid fa-tag"></i></span>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter amount" required />
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Location" class="form-label">Address/City <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text border-0" style="background: #e2e8f0;"><i class="fa-solid fa-map-pin"></i></span>
                            <input asp-for="Location" class="form-control" placeholder="Enter physical location" required />
                        </div>
                        <span asp-validation-for="Location" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-5">
                    <label class="form-label">Property Cover Image <span class="text-danger">*</span></label>
                    <input asp-for="ImageUrl" type="file" class="form-control" id="imageUpload" onchange="previewImage(event)" accept="image/*" required />
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    
                    <div class="image-preview-container">
                        <img id="imagePreview" class="rounded-3 shadow-sm" style="max-width: 100%; max-height: 400px; display: none;" />
                        <span id="previewPlaceholder" class="text-muted"><i class="fa-regular fa-image fa-3x mb-2 d-block"></i>Image Preview Here</span>
                    </div>
                </div>

                <div class="mb-5">
                    <label class="form-label">Additional Home Images <span class="text-muted">(Optional, multiple allowed)</span></label>
                    <input asp-for="AdditionalImages" type="file" class="form-control" id="additionalImagesUpload" multiple accept="image/*" />
                    <span asp-validation-for="AdditionalImages" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-gradient">Publish Listing <i class="fa-solid fa-arrow-right ms-2"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('imagePreview');
            const placeholder = document.getElementById('previewPlaceholder');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                    placeholder.style.display = "none";
                };

                reader.readAsDataURL(input.files[0]);
            } else {
                preview.style.display = "none";
                placeholder.style.display = "block";
            }
        }
    </script>
}
