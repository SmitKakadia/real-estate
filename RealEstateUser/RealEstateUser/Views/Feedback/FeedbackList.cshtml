@* @model IEnumerable<RealEstateUser.Models.FeedbackModel>

@{
    ViewData["Title"] = "Feedback List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Feedback List</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>User Name</th>
                        <th>Property Title</th>
                        <th>Feedback</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var feedback in Model)
                    {
                        <tr>
                            <td>@feedback.UserName</td>
                            <td>@feedback.PropertyTitle</td>
                            <td>@feedback.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No feedback available.</p>
    }
</div>

<style>
    /* Additional custom styles for modern look */
    .table {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border-radius: 8px;
        overflow: hidden;
    }
    .table thead th {
        background-color: #343a40;
        color: #fff;
        font-size: 16px;
    }
    .table tbody td {
        font-size: 15px;
    }
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>
 *@