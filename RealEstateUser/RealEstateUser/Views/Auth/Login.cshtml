@model RealEstateUser.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Real Estate</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(-45deg, #f5f7fa, #e0eafc, #c3cfe2, #f5f7fa);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        @@keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .login-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            padding: 50px 40px;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
            width: 100%;
            max-width: 450px;
            text-align: center;
            opacity: 0;
            transform: translateY(30px);
        }

        .fadeIn {
            opacity: 1 !important;
            transform: translateY(0) !important;
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }

        .login-logo {
            font-size: 3rem;
            color: #d4af37; /* Gold accent */
            margin-bottom: 10px;
        }

        .login-container h2 {
            font-weight: 700;
            margin-bottom: 5px;
            color: #1e3a5f;
            letter-spacing: -0.5px;
        }
        
        .login-container p {
            color: #6c757d;
            margin-bottom: 30px;
        }

        .form-control {
            border-radius: 10px;
            border: 1px solid #e2e8f0;
            padding: 12px 15px;
            padding-left: 45px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }

        .form-control:focus {
            border-color: #d4af37;
            box-shadow: 0 0 0 4px rgba(212, 175, 55, 0.15);
            background-color: #fff;
        }

        .input-group {
            position: relative;
            margin-bottom: 20px;
        }
        
        .input-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #a0aec0;
            z-index: 10;
            transition: color 0.3s;
        }
        
        .form-control:focus + i {
            color: #d4af37;
        }

        .btn-login {
            background: linear-gradient(135deg, #1e3a5f, #294b74);
            color: #fff;
            padding: 14px;
            border-radius: 10px;
            width: 100%;
            font-size: 16px;
            transition: all 0.3s;
            font-weight: 600;
            border: none;
            margin-top: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(30, 58, 95, 0.3);
            color: white;
        }

        .register-link {
            display: inline-block;
            margin-top: 25px;
            color: #4a5568;
            font-weight: 500;
            text-decoration: none;
            transition: color 0.3s;
            font-size: 0.9rem;
        }

        .register-link span {
            color: #d4af37;
            font-weight: 600;
        }

        .register-link:hover span {
            text-decoration: underline;
        }

        .alert {
            border-radius: 10px;
            font-weight: 500;
            font-size: 0.9rem;
            border: none;
            background-color: #fee2e2;
            color: #ef4444;
        }
    </style>
</head>
<body>
    <div class="login-container" id="loginBox">
        <i class="fa-solid fa-crown login-logo"></i>
        <h2>Welcome Back</h2>
        <p>Sign in to access your premium dashboard</p>
        
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger px-3 py-2 text-start"><i class="fa-solid fa-circle-exclamation me-2"></i>@ViewBag.ErrorMessage</div>
        }
        
        <form asp-action="Login" method="post">
            <div class="input-group">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email Address" required />
                <i class="fa-regular fa-envelope"></i>
            </div>
            <div class="input-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
                <i class="fa-solid fa-lock"></i>
            </div>
            
            <button type="submit" class="btn btn-login">Sign In <i class="fa-solid fa-arrow-right-to-bracket ms-2"></i></button>
        </form>
        
        <a asp-action="Register" class="register-link">Don't have an account? <span>Register here</span></a>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("loginBox").classList.add("fadeIn");
        });
    </script>
</body>
</html>