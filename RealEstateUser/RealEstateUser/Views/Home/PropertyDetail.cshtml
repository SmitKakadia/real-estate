@model RealEstateUser.Models.PropertyModel

@{
    ViewData["Title"] = @Model.Title;
}

@section Styles {
    <style>

        .property-header {
            background: linear-gradient(to right, #1e3a5f, #2a5298);
            color: white;
            padding: 60px 0;
            margin-top: -20px;
            margin-left: -20px;
            margin-right: -20px;
            margin-bottom: 40px;
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .property-title {
            font-size: 2.8rem;
            font-weight: 800;
            letter-spacing: -1px;
            margin-bottom: 15px;
        }

        .property-badge {
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(5px);
            padding: 8px 20px;
            border-radius: 30px;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
            font-size: 0.9rem;
            border: 1px solid rgba(255,255,255,0.3);
        }

        .main-image-container {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            position: relative;
        }
        
        .main-image-container img {
            width: 100%;
            height: 500px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
        
        .main-image-container:hover img {
            transform: scale(1.03);
        }
        
        .price-tag {
            position: absolute;
            bottom: 20px;
            right: 20px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 15px 30px;
            border-radius: 15px;
            font-size: 2rem;
            font-weight: 800;
            color: #1e3a5f;
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

        .details-card {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.05);
            height: 100%;
            border: 1px solid rgba(0,0,0,0.05);
        }

        .detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #f1f5f9;
        }
        
        .detail-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .detail-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: #f1f5f9;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: #d4af37;
            margin-right: 20px;
        }

        .detail-label {
            display: block;
            font-size: 0.85rem;
            color: #64748b;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .detail-value {
            font-size: 1.1rem;
            font-weight: 700;
            color: #1e293b;
        }

        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn-buy {
            flex: 1;
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            border: none;
            padding: 15px;
            border-radius: 12px;
            font-weight: bold;
            font-size: 1.1rem;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .btn-buy:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(16, 185, 129, 0.3);
            color: white;
        }

        .btn-action {
            flex: 1;
            background: #f8fafc;
            color: #475569;
            border: 2px solid #e2e8f0;
            padding: 15px;
            border-radius: 12px;
            font-weight: bold;
            transition: all 0.3s;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .btn-action:hover {
            background: #e2e8f0;
            color: #1e293b;
            transform: translateY(-3px);
        }

        .feedback-section {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.05);
            margin-top: 40px;
        }

        .feedback-card {
            background: #f8fafc;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 5px solid #d4af37;
        }

        .section-title {
            font-weight: 800;
            color: #1e3a5f;
            margin-bottom: 25px;
            position: relative;
            display: inline-block;
        }
        
        .section-title::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 50%;
            height: 3px;
            background: #d4af37;
            border-radius: 2px;
        }

    </style>
}

    <div class="property-header text-center">
        <div class="container">
            <span class="property-badge mb-3 d-inline-block">@(Model.Type == "Rent" ? "For Rent" : "For Sale")</span>
            <h1 class="property-title">@Model.Title</h1>
            <p class="lead opacity-75 mb-0"><i class="fa-solid fa-location-dot me-2"></i>@Model.Location</p>
        </div>
    </div>

    <div class="container pb-5">
        <!-- Hidden field for PropertyID (used for feedback) -->
        <input type="hidden" id="hiddenPropertyID" value="@Model.PropertyID" />

        <div class="row g-5">
            <!-- Property Images -->
            <div class="col-lg-7">
                <div class="main-image-container">
                    @if (Model.AdditionalImages != null && Model.AdditionalImages.Count > 0)
                    {
                        <div id="propertyImagesCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <!-- Main Image as first slide -->
                                <div class="carousel-item active">
                                    <img src="@Model.ImageUrl" class="d-block w-100" alt="Main Cover">
                                </div>
                                <!-- Additional Images -->
                                @foreach (var img in Model.AdditionalImages)
                                {
                                    <div class="carousel-item">
                                        <img src="@img" class="d-block w-100" alt="Additional Property Image">
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#propertyImagesCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#propertyImagesCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    }
                    else
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Title">
                    }

                    <div class="price-tag">
                        $@(Model.Price.ToString("N0"))
                    </div>
                </div>
                
                <div class="mt-5">
                    <h3 class="section-title">Property Description</h3>
                    <p class="text-muted" style="line-height: 1.8; font-size: 1.1rem;">
                        @Model.Description
                    </p>
                </div>
            </div>

            <!-- Property Details -->
            <div class="col-lg-5">
                <div class="details-card">
                    <h3 class="fw-bold mb-4 text-dark"><i class="fa-solid fa-circle-info text-primary me-2"></i>Key Details</h3>
                    
                    <div class="detail-item">
                        <div class="detail-icon"><i class="fa-solid fa-map-location-dot"></i></div>
                        <div>
                            <span class="detail-label">Location</span>
                            <span class="detail-value">@Model.Location</span>
                        </div>
                    </div>
                    
                    <div class="detail-item">
                        <div class="detail-icon"><i class="fa-solid fa-tag"></i></div>
                        <div>
                            <span class="detail-label">Listing Type</span>
                            <span class="detail-value text-primary">@Model.Type</span>
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-icon"><i class="fa-solid fa-info-circle"></i></div>
                        <div>
                            <span class="detail-label">Current Status</span>
                            @if(Model.Status.ToLower().Contains("avail")) {
                                <span class="detail-value text-success"><i class="fa-solid fa-check-circle me-1"></i> @Model.Status</span>
                            } else {
                                <span class="detail-value text-warning"><i class="fa-solid fa-clock me-1"></i> @Model.Status</span>
                            }
                        </div>
                    </div>

                    <div class="action-buttons d-flex flex-column gap-3">
                        @{
                            var currentUserIdStr = Context.Session.GetString("UserID");
                            bool isOwner = currentUserIdStr == Model.UserID.ToString();
                            bool isSold = Model.Status.ToLower().Contains("sold");
                        }

                        @if (isOwner)
                        {
                            <div class="p-3 bg-light rounded-3 text-center text-primary fw-bold" style="border: 2px dashed #cbd5e0;">
                                <i class="fa-solid fa-house-user me-2"></i>You are the owner of this listed property
                            </div>
                        }
                        else if (isSold)
                        {
                            <div class="p-3 bg-light rounded-3 text-center text-danger fw-bold" style="border: 2px dashed #e53e3e;">
                                <i class="fa-solid fa-ban me-2"></i>This property has already been sold
                            </div>
                        }
                        else
                        {
                            <button class="btn-buy" data-bs-toggle="modal" data-bs-target="#buyModal">
                                <i class="fa-solid fa-cart-shopping me-2"></i> Proceed to Order
                            </button>
                        }
                        
                        <div class="d-flex gap-3">
                            <button type="button" class="btn-action w-100" data-bs-toggle="modal" data-bs-target="#feedbackModal">
                                <i class="fa-regular fa-comment-dots me-2"></i> Feedback
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn-action w-100 text-decoration-none">
                                <i class="fa-solid fa-arrow-left me-2"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Feedback Section (loaded inline) -->
        <div id="feedbackContainer" class="feedback-section mt-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="section-title mb-0">Client Feedback</h3>
                <button type="button" class="btn btn-outline-primary rounded-pill px-4" id="showFeedbackBtn">
                    <i class="fa-solid fa-arrows-rotate me-2"></i> Load Feedback
                </button>
            </div>
            <div id="feedbackList">
                <div class="text-center py-5 text-muted">
                    <i class="fa-regular fa-comments fa-3x mb-3 opacity-50"></i>
                    <p>Click "Load Feedback" to view what others think about this property.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Buy Confirmation Modal -->
    <div class="modal fade" id="buyModal" tabindex="-1" aria-labelledby="buyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 rounded-4 shadow-lg">
                <form id="buyForm">
                    <div class="modal-header border-bottom-0 pt-4 px-4">
                        <h5 class="modal-title fw-bold text-dark" id="buyModalLabel"><i class="fa-solid fa-shield-halved text-success me-2"></i>Confirm Purchase</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body px-4 py-3">
                        <p class="text-muted fs-5">You are about to initiate the purchase process for <strong>@Model.Title</strong>.</p>
                        <div class="p-3 bg-light rounded-3 mt-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted">Total Price:</span>
                                <span class="fw-bold fs-4 text-success">$@(Model.Price.ToString("N0"))</span>
                            </div>
                        </div>
                        <input type="hidden" id="PropertyID" name="propertyID" value="@Model.PropertyID" />
                    </div>
                    <div class="modal-footer border-top-0 pb-4 px-4 d-flex justify-content-between">
                        <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success rounded-pill px-4 fw-bold shadow-sm">Confirm & Checkout</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Feedback Modal for providing feedback -->
    <div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 rounded-4 shadow-lg">
                <form id="feedbackForm" asp-controller="Feedback" asp-action="SubmitFeedback" method="post">
                    <div class="modal-header border-bottom-0 pt-4 px-4">
                        <h5 class="modal-title fw-bold text-dark" id="feedbackModalLabel"><i class="fa-regular fa-envelope text-primary me-2"></i>Write a Review</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body px-4">
                        <input type="hidden" name="PropertyID" value="@Model.PropertyID" />
                        <input type="hidden" name="UserID" id="feedbackUserID" value="@Model.UserID" />
                        <div class="mb-3">
                            <label for="Description" class="form-label text-muted fw-bold">Your Feedback</label>
                            <textarea class="form-control rounded-3" id="Description" name="Description" rows="5" placeholder="Share your experience..." required style="background: #f8fafc; border: 1px solid #e2e8f0;"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-top-0 pb-4 px-4 d-flex justify-content-between">
                        <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">Submit Review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
        // BUY form submission via AJAX
        $("#buyForm").submit(function (e) {
            e.preventDefault();
            var propertyId = $("#PropertyID").val();
            $.ajax({
                url: '@Url.Action("BuyPropertyAjax", "Property")',
                type: 'POST',
                data: { propertyID: propertyId },
                success: function (response) {
                    alert(response.message);
                    var modalElement = document.getElementById('buyModal');
                    var modalInstance = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);
                    modalInstance.hide();
                    location.reload();
                },
                error: function (xhr) {
                    var errorMsg = xhr.responseText || 'Error buying property.';
                    alert(errorMsg);
                    var modalElement = document.getElementById('buyModal');
                    var modalInstance = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);
                    modalInstance.hide();
                }
            });
        });

        // FEEDBACK form submission via AJAX
        $("#feedbackForm").submit(function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: '@Url.Action("SubmitFeedback", "Feedback")',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    alert(response);
                    var modalElement = document.getElementById('feedbackModal');
                    var modalInstance = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);
                    modalInstance.hide();
                    location.reload();
                },
                error: function (xhr) {
                    var errorMsg = xhr.responseText || 'Error submitting feedback.';
                    alert(errorMsg);
                    var modalElement = document.getElementById('feedbackModal');
                    var modalInstance = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);
                    modalInstance.hide();
                    location.reload();
                }
            });
        });

        // Load feedback when "Show Feedback" button is clicked
        $("#showFeedbackBtn").click(function () {
            var propertyID = $("#hiddenPropertyID").val(); 
            $("#feedbackList").html('<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>');
            var url = '@Url.Action("GetFeedbackByPropertyID", "Feedback")' + '/' + propertyID;
            $.ajax({
                url: url,
                type: 'GET',
                dataType: 'json', 
                success: function (feedbacks) {
                    var feedbackListHtml = '';
                    if (feedbacks && feedbacks.length > 0) {
                        feedbacks.forEach(function (feedback) {
                            feedbackListHtml += '<div class="feedback-card">';
                            feedbackListHtml += '<div class="d-flex align-items-center mb-2"><i class="fa-solid fa-circle-user text-muted fs-4 me-2"></i><span class="fw-bold text-dark">Verified User</span></div>';
                            feedbackListHtml += '<p class="mb-0 text-secondary">' + feedback.description + '</p>';
                            feedbackListHtml += '</div>';
                        });
                    } else {
                        feedbackListHtml = '<div class="text-center py-4 text-muted"><p>No feedback available yet. Be the first to review!</p></div>';
                    }
                    $("#feedbackList").html(feedbackListHtml).fadeIn();
                },
                error: function (xhr) {
                    var errorMsg = xhr.responseText || 'Error loading feedback.';
                    $("#feedbackList").html('<p class="text-danger text-center"><i class="fa-solid fa-triangle-exclamation me-2"></i>' + errorMsg + '</p>');
                }
            });
        });
    </script>
}
